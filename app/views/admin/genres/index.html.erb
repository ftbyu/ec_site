<div class="container">
    <h3>ジャンル追加・一覧画面</h3>
    <br>
    <%= form_for @genre_new ,url: admin_genres_path do |f| %>
        <div class="field row">
        <div class="col-md-6">
            <%= f.label :ジャンル %>
            <%= f.text_field :name %>
            <%= f.radio_button :is_validity, :true %>
            <%= f.label :is_validity, "有効", { style: "display: inline-block;"} %>
            <%= f.radio_button :is_validity, :false %>
            <%= f.label :is_validity, "無効", { style: "display: inline-block;"} %>
            <%= f.submit :追加, class: 'btn btn-primary'%>
        </div>
        </div>
    <% end %>
    <br>
    <br>
    <br>
    <div class="col-xs-6">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ジャンル</th>
                    <th>状態</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                    <tr>
                        <td>
                            <%= genre.name %>
                        </td>
                        <td>
                            <%= genre.is_validity %>
                        </td>
                        <td>
                            <%= link_to "edit", edit_admin_genre_path(genre.id) ,class:"btn-sm btn-success" %>
                        </td>
                    </tr>
                <% end %>
            </tbody> 
        </table>
    </div>
</div>

