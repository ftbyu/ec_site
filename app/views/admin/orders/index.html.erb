<div class="container" >
    <div class="row">
        <h3>注文一覧画面</h3>
        <div class="col-xs-12">
            <table class="table table-bordered">
                <thead>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                        <tr>
                            <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %></td>
                            <td>
                                <%= "#{order.end_user.last_name + order.end_user.first_name}" %>
                            </td>
                            <td>
                                <% sum = 0 %>
                                <% order.order_items.each do |order_item| %>
                                    <% sum += order_item.order_quanitity.to_i %>
                                <% end %>
                                <%= sum %>
                            </td>
                            <td><%= order.status_i18n %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
                