<%= form_for @item, url: admin_items_path do |f| %>
    <div class="col-md-6">
        <div class="field row">
            <%= f.label :商品名　,class: 'col-md-3' %>
            <%= f.text_field :name, class: 'col-md-9' %>
        </div>
        <br>
        <div class="field row">
            <%= f.label :商品説明, class: 'col-md-3' %>
            <%= f.text_area :description, class: 'col-md-9'%>
        </div>
        <br>
        <div class="field row">
            <%= f.label :ジャンル , class: 'col-md-3' %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name , include_blank: "-- 選択して下さい --" , class: 'col-md-9' %>
        </div>
        <br>
        <div class="field row">
            <%= f.label :税抜価格 , class: 'col-md-3' %>
            <%= f.text_field :price_nontax, class: 'col-md-9'%>
        </div>
        <br>
        <div class="field row">
            <%= f.label :販売ステータス, class: 'col-md-3'  %>
            <label><%= f.radio_button :sale_status, "販売中" %> 販売中 </label>
            <label><%= f.radio_button :sale_status, "販売停止中" %> 販売停止中　</label>
            <%# <%= f.select :sale_status, Item.sale_statuses.keys, {}, {class: 'col-md-9' }  %>
        </div>
        <br>
        <br>
        <div class="actions row">
            <%= f.submit class: 'btn btn-primary col-md-3'%>
        </div>
    </div>
<% end %>

