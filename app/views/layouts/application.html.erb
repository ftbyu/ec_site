<!DOCTYPE html>
<html>
  <head>
    <title>EcSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left"></nav>
        <% if admin_signed_in? %>
          <nav class="text-muted"><span><strong>管理者</strong></span></nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "受注一覧" %></li>
              <li><%= link_to "商品登録" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
            </ul>
          </nav>
        <% elsif end_user_signed_in? %>
          <nav class="text-muted"><span><strong>ユーザー</strong></span></nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "マイページ", public_end_user_path %></li>
              <li><%= link_to "カート一覧" %></li>
              <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
            </ul>
          </nav>
        <% else %>
          <nav class="text-muted"><span><strong>ゲストユーザー</strong></span></nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "新規登録", new_end_user_registration_path %></li>
              <li><%= link_to "ログイン", new_end_user_session_path %></li>
              <li><%= link_to "管理者ログイン", new_admin_session_path %></li>
            </ul>
          </nav>
        <% end %>
      </div>
    </header>
    <main >
      <%= yield %>
    </main>
  </body>
</html>
    
