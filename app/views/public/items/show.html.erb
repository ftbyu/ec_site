<div class="container">
    <div class="row">
        <h3>商品　詳細画面</h3>
        <div class="col-lg-10">
            <div class="row">
                <div class="image col-md-6">
                    <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "400x270" %>
                </div>
                <div class='col-md-6'>
                    <div class="row item_name">
                        <%= @item.name %>
                    </div>
                    <br>
                    <div class="row item_description">
                        <%= @item.description %>
                    </div>
                    <div class="row item_price_nontax">
                        ¥ <%= @item.price_nontax %><span class="nontax">  (税込)</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7">
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <%= form_for @cart_item, url: public_cart_items_path  do |f| %>
                            <div class="row">
                                <div class="col-sm-12">
                                    <%= f.number_field :amount, min:1, step:1, rows:'5', class: "form-control",placeholder: "個数選択" %>
                                    <%= f.hidden_field :item_id, :value => @item.id %>
                                </div>
                            </div>
                            <%= f.submit "カートに入れる", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
                        <% end %>
                    </div>
                </div>
        </div>
    </div>
</div>