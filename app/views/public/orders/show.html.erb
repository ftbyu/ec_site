<div class="container" >
    <h2>注文詳細</h2>
    <div class="row">
        <div class="col-md-4">
        <h3>注文履歴</h3>
            <table class="table table-bordered">
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        <%= @order.postal_code %>
                        <br>
                        <%= @order.address %>
                        <br>
                        <%= @order.address_name %>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td>
                        <%= @order.payment_method %>
                    </td>
                <tr>
                    <th>ステータス</th>
                    <td><%= @order.status_i18n %></td>
                </tr>
            </table>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-4">
        <h3>請求情報</h3>
            <table class="table table-bordered">
                <tr>
                    <th>商品合計</th>
                    <td><%= @order.total_payment - @order.postage %></td>
                </tr>
                <tr>
                    <th>配送料</th>
                    <td>
                        <%= @order.postage %>
                    </td>
                </tr>
                <tr>
                    <th>ご請求額</th>
                    <td>
                        <%= @order.total_payment %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <h3>注文内容</h3>
        <table class="table table-bordered">
            <thead>
                <th>商品</th>
                <th>単価(税込)</th>
                <th>個数</th>
                <th>小計</th>
            </thead>
            <tbody>
                <% @order.order_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name%></td>
                        <td>
                            <%= order_item.current_value%>
                        <td>
                            <%= order_item.order_quanitity %>
                        </td>
                        <td><%= order_item.order_quanitity * order_item.current_value %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
                